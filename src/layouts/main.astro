---
import Navbar from "../components/Navbar.astro";
interface Props {
  exam?: string;
}
const { exam } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body class="dark:bg-gray-800 [scrollbar-gutter:stable both-edges] overflow-x-hidden w-screen">
  <!-- <body class="mx-auto dark:bg-gray-800 w-screen"> -->
    <Navbar exam={exam} />
    <slot />
  </body>
</html>

<style is:global>
  ::selection {
    background-color: theme(colors.emerald.200);
  }
  @media (prefers-color-scheme: dark) {
    ::selection {
      background-color: theme(colors.emerald.300/.7);
    }
  }
</style>
