<button
  class="appearance-none py-2 px-4 bg-amber-500 text-white font-semibold rounded-lg shadow-md hover:bg-amber-600 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-opacity-75"
  id="button-clear"
>
  Clear Answers
</button>

<script >
  const button = document.body.querySelector(`button#button-clear`);
  const clearButtons = document.body.querySelectorAll(`button`)
  const answers = document.body.querySelectorAll(`li`)
  const answerImg = document.body.querySelectorAll(`img`);
//   const answerEl = document.body.querySelector(`img#${answer}`);
  // const classList = answerEl.classList;

  if (button) {
    button.addEventListener("click", () => {
        answers.forEach(answer => {
            answer.classList.remove("bg-emerald-200")
        })
        clearButtons.forEach(button => {
          // also hide all images
          if (button.textContent === "Clear answer" || button.textContent === "Hide answer") {
            button.textContent = "Show answer"
          }
        })
        answerImg.forEach(img => {
          if (img.id.startsWith("answer")) {
            img.classList.add("hidden")
          }
        })
    });
  }
</script>

